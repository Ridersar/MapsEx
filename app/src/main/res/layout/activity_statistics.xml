<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/lblStatistics"
        android:layout_width="188dp"
        android:layout_height="113dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="monospace"
        android:padding="10sp"
        android:text="Количество построенных маршрутов"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStatistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/fields"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="monospace"
        android:inputType="number"
        android:padding="10sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblStatistics" />
</androidx.constraintlayout.widget.ConstraintLayout>