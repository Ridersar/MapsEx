<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/lblGreeting"
        android:layout_width="0sp"
        android:layout_height="70sp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="monospace"
        android:padding="10sp"
        android:text="Общая статистика"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblStatistics"
        android:layout_width="0sp"
        android:layout_height="115sp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="monospace"
        android:padding="10sp"
        android:text="Количество построенных маршрутов"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtStatistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStatistics"
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/fields"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="monospace"
        android:inputType="number"
        android:padding="10sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblStatistics" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="0sp"
        android:layout_height="60dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/fields"
        android:fontFamily="monospace"
        android:onClick="onButtonClick"
        android:text="Назад"
        android:textColor="@android:color/black"
        android:padding="10sp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>